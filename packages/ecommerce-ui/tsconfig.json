{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "outDir": "dist",
    "baseUrl": "src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "jsx": "react"
  },
  "include": [
    "index",
    "src",
    "types",
    "../../apps/site/src/components/products/ProductCardShop.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "templates"
  ]
}